# rEngine Platform Environment Configuration
# Copy this to .env and customize as needed

# ===========================================
# CORE PLATFORM SETTINGS
# ===========================================
NODE_ENV=development
RENGINE_DEBUG=true
RENGINE_MODE=platform

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=4036

# GitHub Integration (Optional - for project tracking)
# Get token from: https://github.com/settings/tokens
GITHUB_TOKEN=

# Repository settings for GitHub MCP
GITHUB_REPO_OWNER=lbruton
GITHUB_REPO_NAME=rEngine

# ===========================================
# SERVICE PORTS (Auto-configured)
# ===========================================
# Main Gateway: 4032
# StackTrackr: 4033
# rEngine Platform: 4034-4035
# Core MCP: 4036
# Development: 4037
# MCP Filesystem: 4040
# MCP Memory: 4041
# MCP GitHub: 4042
# Code Executor: 4043
# Live Dev Server: 4044-4045
# Project Dashboard: 4046
# MCP Git: 4047
# MCP SQLite: 4048

# ===========================================
# MEMORY SYSTEM CONFIGURATION
# ===========================================
MEMORY_BRIDGE_PORT=8092
MEMORY_PERSISTENCE_ENABLED=true
MEMORY_BACKUP_INTERVAL=300
MEMORY_MAX_ENTRIES=10000

# ===========================================
# DEVELOPMENT FEATURES
# ===========================================
LIVE_RELOAD_ENABLED=true
CODE_EXECUTOR_TIMEOUT=30000
FILE_WATCHER_ENABLED=true
AUTO_DOCUMENTATION=true

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Enable CORS for development
CORS_ENABLED=true
CORS_ORIGIN=*

# API Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# ===========================================
# DOCKER DEVELOPMENT
# ===========================================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# ===========================================
# PROJECT TRACKING
# ===========================================
PROJECT_NAME=rEngine
PROJECT_VERSION=3.04.87
PROJECT_DESCRIPTION="StackTrackr precious metals inventory with rEngine Platform v2.1.0"

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================
# Ollama Integration (if available)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Context7 Integration - Long-term context management
CONTEXT7_API_KEY=

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# VS Code Integration
VSCODE_MCP_ENABLED=true
VSCODE_SERVER_PORT=8000
