#!/bin/bash
# rEngine Document Scribe Tool - Convenience wrapper
# This provides easy access to the unified document scribe system

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
RENGINE_DIR="$(dirname "$SCRIPT_DIR")/rEngine"
DOCUMENT_SCRIBE="$RENGINE_DIR/document-scribe.js"

# Check if document-scribe.js exists
if [ ! -f "$DOCUMENT_SCRIBE" ]; then
    echo "‚ùå Error: document-scribe.js not found at $DOCUMENT_SCRIBE"
    exit 1
fi

# Pass all arguments to the document scribe
exec node "$DOCUMENT_SCRIBE" "$@"
