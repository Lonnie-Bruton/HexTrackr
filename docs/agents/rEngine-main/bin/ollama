#!/bin/bash

# Easy Ollama Commands - Single Instance Management
# Quick aliases for common Ollama operations

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SINGLETON_SCRIPT="$SCRIPT_DIR/ollama-singleton.sh"

case "${1:-help}" in
    "light"|"lightweight")
        echo "ðŸª¶ Using lightweight model for development..."
        "$SINGLETON_SCRIPT" run qwen2.5-coder:3b "${2:-}"
        ;;
    "code"|"coding")
        echo "ðŸ’» Using coding-optimized 7B model..."
        "$SINGLETON_SCRIPT" run qwen2.5-coder:7b "${2:-}"
        ;;
    "7b"|"medium")
        echo "ðŸŽ¯ Using 7B coding model (balanced performance)..."
        "$SINGLETON_SCRIPT" run qwen2.5-coder:7b "${2:-}"
        ;;
    "heavy"|"reasoning")
        echo "ðŸ§  Using heavy model for complex reasoning..."
        "$SINGLETON_SCRIPT" run llama3:8b "${2:-}"
        ;;
    "stop"|"kill")
        "$SINGLETON_SCRIPT" kill
        ;;
    "status"|"check")
        "$SINGLETON_SCRIPT" status
        ;;
    "list"|"models")
        "$SINGLETON_SCRIPT" list
        ;;
    "restart")
        "$SINGLETON_SCRIPT" restart
        ;;
    "help"|*)
        echo "ðŸ¤– Easy Ollama Commands:"
        echo ""
        echo "Memory-Efficient Options:"
        echo "  ./ollama light [prompt]    - Use qwen2.5-coder:3b (1.9GB, fastest)"
        echo ""
        echo "Balanced Options:"
        echo "  ./ollama code [prompt]     - Use qwen2.5-coder:7b (4.7GB, better quality)"
        echo "  ./ollama 7b [prompt]       - Use 7B coding model (same as code)"
        echo ""
        echo "High-Quality Options:"
        echo "  ./ollama heavy [prompt]    - Use llama3:8b (4.7GB, best reasoning)"
        echo "  ./ollama reasoning [prompt] - Use reasoning model (same as heavy)"
        echo ""
        echo "Management:"
        echo "  ./ollama status            - Check what's running"
        echo "  ./ollama stop              - Stop all models"
        echo "  ./ollama restart           - Restart Ollama"
        echo "  ./ollama list              - Show available models"
        echo ""
        echo "ðŸ’¡ Tip: Use 'light' for speed, '7b' for balanced quality, 'heavy' for best results!"
        ;;
esac
