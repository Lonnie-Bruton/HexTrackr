{
  "memory_vault": {
    "version": "1.0",
    "max_lease_ttl_sec": 3600,
    "default_lease_ttl_sec": 300,
    "max_patch_size": 100,
    "require_review_threshold": 20,
    "auto_cleanup_expired_leases": true,
    "event_log_retention_days": 90,
    "backup_interval_hours": 24,
    "schema_validation": {
      "enabled": true,
      "strict_mode": false,
      "fail_on_warnings": false
    },
    "conflict_resolution": {
      "default_strategy": "three_way_merge",
      "allow_force_overwrite": false,
      "require_manual_review": true
    },
    "agents": {
      "github_copilot": {
        "display_name": "GitHub Copilot",
        "max_lease_ttl_sec": 600,
        "auto_confidence": 0.75
      },
      "claude_sonnet": {
        "display_name": "Claude Sonnet",
        "max_lease_ttl_sec": 900,
        "auto_confidence": 0.85
      },
      "gpt4": {
        "display_name": "GPT-4",
        "max_lease_ttl_sec": 900,
        "auto_confidence": 0.80
      },
      "user": {
        "display_name": "Human User",
        "max_lease_ttl_sec": 3600,
        "auto_confidence": 1.0
      }
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "agents/memory/vault.log",
    "max_size_mb": 10,
    "backup_count": 5
  },
  "validation": {
    "jsonschema_version": "draft-07",
    "custom_validators": [],
    "warning_as_error": false
  }
}
